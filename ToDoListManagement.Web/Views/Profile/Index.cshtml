@model ToDoListManagement.Entity.ViewModel.ProfileViewModel

@{
    ViewData["Title"] = "Profile";
    string isAdmin = User.IsInRole("Admin") ? "" : "readonly";
}

<div class="container-fluid my-4">
    <h2 class="mb-4 ">Profile</h2>

    <div class="row g-4">
        <!-- Left Profile Card -->
        <div class="col-12 col-md-4">
            <div class="card text-center shadow-sm h-100">
                <div class="card-body d-flex flex-column align-items-center justify-content-center">
                    <div class="mb-3">
                        <i class="fas fa-user-circle fa-5x text-secondary"></i>
                    </div>
                    <h5 class="card-title mb-1">@Model.Name</h5>
                    <p class="text-muted mb-0">@Model.Email</p>
                </div>
            </div>
        </div>

        <!-- Right Form Section -->
        <div class="col-12 col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form asp-action="UpdateProfile" method="post">
                        <input type="hidden" asp-for="EmployeeId" />

                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" asp-for="Name" />
                            <label class="form-label">Name</label>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input type="email" class="form-control" asp-for="Email" readonly
                                style="cursor: not-allowed;" />
                            <label class="form-label">Email</label>
                        </div>

                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" asp-for="PhoneNumber" />
                            <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" value="@Model.RoleName" readonly
                                style="cursor: not-allowed;" />
                            <label class="form-label">Role</label>
                        </div>

                        <div class="d-flex justify-content-end">
                            <button type="submit"
                                class="btn bg-secondary align-items-center text-white me-2">Save</button>
                            <a asp-controller="Dashboard" asp-action="Index" class="btn border-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>