@model ToDoListManagement.Entity.ViewModel.ResetPasswordViewModel

@{
  ViewData["Title"] = "Reset Password";
  Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="card-body login-card-body">
  <p class="login-box-msg">You are only one step a way from your new password, recover your password now.</p>

  <form asp-controller="Auth" asp-action="ResetPassword" method="post">
    <input asp-for="Email" type="hidden" class="form-control">
    <input asp-for="Token" type="hidden" class="form-control">

    <div class="form-floating">
      <input type="password" style="position: relative;" asp-for="NewPassword" id="newPassword" class="form-control"
        placeholder="NewPassword">
      <i class="far fa-eye toggle-password" data-target="newPassword" id="togglePassword"
        style=" cursor: pointer; position: absolute;  right: 12px; margin-top: -37px;"></i>
      <label for="floatingPassword">Password*</label>
      <span asp-validation-for="NewPassword" class="text-danger"></span>
    </div>

    <div class="form-floating  mt-3">
      <input type="password" style="position: relative;" asp-for="ConfirmPassword" id="confirmPassword"
        class="form-control" placeholder="ConfirmPassword">
      <i class="far fa-eye toggle-password" data-target="confirmpassword" id="toggleNewPassword"
        style=" cursor: pointer; position: absolute;  right: 12px; margin-top: -37px;"></i>
      <label for="floatingPassword">Confirm Password*</label>
      <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>


    <div class="row mt-3">
      <div class="col-12">
        <button type="submit" class="btn btn-primary btn-block">Change password</button>
      </div>
    </div>
  </form>

  <p class="mt-3 mb-1">
    <a asp-controller="Auth" asp-action="Login">Login</a>
  </p>
</div>

<script>
  $(document).ready(function () {
    const eyebtn = document.getElementById("togglePassword");
    const passfield = document.getElementById('newPassword');
    togglePassword.addEventListener('click', function (e) {
      const type = passfield.getAttribute('type') === 'password' ? 'text' : 'password';
      passfield.setAttribute('type', type);
      this.classList.toggle('fa-eye');
      this.classList.toggle('fa-eye-slash');
    });
    const eyebtn2 = document.getElementById("toggleNewPassword");
    const passfield2 = document.getElementById('confirmPassword');
