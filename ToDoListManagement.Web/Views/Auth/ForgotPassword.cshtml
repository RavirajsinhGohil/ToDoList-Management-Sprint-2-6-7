@model ToDoListManagement.Entity.ViewModel.ForgotPasswordViewModel

@{
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
    ViewData["Title"] = "Forgot Password";
}

<div class="card-body login-card-body">
    <p class="login-box-msg">You forgot your password? Here you can easily retrieve a new password.</p>

    <form asp-controller="Auth" asp-action="SendResetPasswordEmail" method="post">
        <div class="form-floating input_item mb-3">
            <input type="email" class="form-control" id="email" style=" position: relative;;"
                placeholder="name@example.com" asp-for="Email">
            <label class="w-100" for="floatingInput">
                <div class="d-flex justify-content-between">
                    <div>Email*</div>
                </div>
            </label>
            <div style="position: absolute; right: 12px; top: 20px ;">
                <img src="~/images/customer.svg" alt="">
            </div>
            <span class="text-danger" asp-validation-for="Email"></span>
        </div>

        <div class="row mt-3">
            <div class="col-12">
                <button type="submit" class="btn btn-primary btn-block">Request new password</button>
            </div>
        </div>
    </form>

    <p class="mt-3 mb-1">
        <a asp-controller="Auth" asp-action="Login">Login</a>
    </p>
    <p class="mb-0">
        <a asp-controller="Auth" asp-action="Register" class="text-center">Register a new membership</a>
    </p>
</div>